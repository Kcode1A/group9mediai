<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Quản lý bác sĩ</title>
  <style>
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { padding: 10px; border: 1px solid #ccc; text-align: left; }
    form { margin-bottom: 20px; }
    input, select, button { padding: 8px; width: 100%; margin-top: 5px; }
  </style>
</head>
<body>
  <h1>🧑‍⚕️ Quản lý bác sĩ</h1>

  <form method="POST" action="/admin/doctors">
    <input type="hidden" name="id" id="doctor-id">

    <label>Họ tên:</label>
    <input type="text" name="fullName" id="doctor-name" required>

    <label>Trình độ (level):</label>
    <input type="text" name="level" id="doctor-level" required>

    <label>Bệnh viện:</label>
    <select name="hospitalId" id="doctor-hospital" required>
      <option value="">-- Chọn bệnh viện --</option>
      <% hospitals.forEach(h => { %>
        <option value="<%= h._id %>"><%= h.name %></option>
      <% }) %>
    </select>

    <label>Chuyên khoa:</label>
    <select name="specializationId" id="doctor-specialization" required>
      <option value="">-- Chọn chuyên khoa --</option>
      <% specializations.forEach(s => { %>
        <option value="<%= s._id %>"><%= s.name %></option>
      <% }) %>
    </select>

    <button type="submit">💾 Lưu</button>
  </form>

  <hr>

  <h2>Danh sách bác sĩ</h2>
  <% if (doctors.length === 0) { %>
    <p>Chưa có bác sĩ nào.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Họ tên</th>
          <th>Trình độ</th>
          <th>Chuyên khoa</th>
          <th>Bệnh viện</th>
          <th>Hành động</th>
        </tr>
      </thead>
      <tbody>
        <% doctors.forEach(d => { %>
          <tr>
            <td><%= d.fullName %></td>
            <td><%= d.level %></td>
            <td><%= d.specializationId?.name %></td>
            <td><%= d.hospitalId?.name %></td>
            <td>
              <button type="button" onclick="editDoctor('<%= d._id %>', '<%= d.fullName %>', '<%= d.level %>', '<%= d.specializationId?._id %>', '<%= d.hospitalId?._id %>')">✏️ Sửa</button>
              <form method="POST" action="/admin/doctors/delete/<%= d._id %>" style="display:inline;">
                <button type="submit" onclick="return confirm('Xác nhận xóa bác sĩ?')">🗑️ Xóa</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <script>
    function editDoctor(id, name, level, specId, hospId) {
      document.getElementById('doctor-id').value = id;
      document.getElementById('doctor-name').value = name;
      document.getElementById('doctor-level').value = level;
      document.getElementById('doctor-specialization').value = specId;
      document.getElementById('doctor-hospital').value = hospId;
    }
  </script>
</body>
</html>
